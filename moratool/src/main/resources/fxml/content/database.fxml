<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="hu.mora.tool.section.content.DatabaseController" vgap="10" hgap="10"
          xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets top="30" bottom="5"/>
    </padding>

    <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <Label text="Adatbázis mentése" styleClass="h1"/>
        <Button text="Mentés megkezdése" styleClass="btn-primary" onAction="#saveCurrentDatabase"/>
    </VBox>

    <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <Label text="Adatbázis visszaállítása" styleClass="h1"/>
        <Button text="Visszaállítás megkezdése" styleClass="btn-primary"/>
    </VBox>
</GridPane>